<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.googleglasscards.GoogleGlassCardActivity" >

    <!-- Home Team -->
    <TextView 
        android:id="@+id/home_team_name_text_view"
        android:layout_width="249dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:gravity="center"
        android:textSize="40sp"/>
	<!-- Home Team -->
    
    <!-- Away Team -->
    <TextView 
        android:id="@+id/away_team_name_text_view"
        android:layout_width="249dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="40sp"/>
    <!-- Away Team -->
    
    <!-- Away Team Score -->
    <TextView 
        android:id="@+id/away_score_text_view"
        android:layout_width="249dp"
        android:layout_height="wrap_content"
        android:gravity="center"
       	android:layout_below="@+id/away_score_text_view"
       	android:layout_alignLeft="@+id/away_team_name_text_view"
        />
    <!-- Away Team Score -->
    
    <!-- Home Team Score -->
    <TextView 
        android:id="@+id/home_score_text_view"
        android:layout_width="249dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="70sp"
        android:layout_alignBaseline="@+id/away_score_text_view"
        android:layout_alignBottom="@+id/away_score_text_view"
        android:layout_alignLeft="@+id/home_score_text_view"/>
    <!-- Home Team Score -->
    
    <!-- Footer -->
    <TextView 
        android:id="@+id/footer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="33dp"
        android:textSize="26sp"/>
    <!-- Footer -->
    
</RelativeLayout>
